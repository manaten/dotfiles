shell "/usr/bin/zsh"
vbell off
autodetach on
startup_message off
defscrollback 10000
hardstatus alwayslastline "%{= gk}[%m/%d %02c:%s] %{gW} %-w%{= wk}%n %t%{-}%+w %=%{gk}$USER@$HOSTNAME[$LANG]"
escape ^z^z
defbce "on"
shelltitle '% |zsh'
term xterm-256color


# キーバインド
bind s colon 'screen ssh '
bind k
bind ^k
bind .
bind ^\
bind \\
bind ^h
bind h
